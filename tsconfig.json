{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"experimentalDecorators": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"outDir": "./dist",
		"skipLibCheck": true,
		"strict": true,
		"target": "es2020",
		"lib": ["es2020"],
		"rootDir": ".",
		"rootDirs": ["."],
		"baseUrl": ".",
		"sourceMap": false,
		"paths": {
			"@/*": ["src/*"]
		},
		"plugins": []
	},
	"include": [".eslintrc.js", "src/**/*", "index.ts", "global.d.ts"],
	"exclude": ["dist/**/*", "node_modules", "packages/*", "tests/**/*", "build/**/*"]
}
